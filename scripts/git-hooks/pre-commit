#!/bin/bash
set -e

# Function to display command before executing it
run_cmd() {
  echo -e "ğŸ”¹ Running: \033[32m$@\033[0m"
  "$@"
}

# Navigate to project root based on the script's location
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
cd "$SCRIPT_DIR/../../dev/backend"

# Check if .venv exists in dev/backend, if not create it
if [ ! -d ".venv" ]; then
  echo "Creating python virtual environment..."
  run_cmd uv venv
fi

# Navigate to backend directory and setup environment
echo -e "\nğŸ”„ Setting up dependencies...\n"
run_cmd uv lock
run_cmd uv sync
source .venv/bin/activate

# Run checks
echo -e "\n\nğŸ“‹ ==================== CODE QUALITY CHECKS ====================\n"

echo -e "ğŸ”¤ Import sorting check and fix...\n"
run_cmd ruff check --select I --fix
echo -e "\nâœ… Import sorting complete!\n\n"

echo -e "ğŸ” Linting checks with auto-fix...\n"
run_cmd ruff check --fix
echo -e "\nâœ… Linting checks complete!\n\n"

echo -e "âœ¨ Code formatting...\n"
run_cmd ruff format
echo -e "\nâœ… Code formatting complete!\n\n"

echo -e "ğŸ§ª Pylint...\n"
echo -e "ğŸ”¹ Running: \033[32mpylint --rcfile=.pylintrc \$(git ls-files '*.py')\033[0m"
pylint --rcfile=.pylintrc $(git ls-files '*.py')
echo -e "\nâœ… Pylint checks complete!\n\n"

# If we got this far, all checks passed
echo -e "\nğŸ‰ ==================== SUCCESS! ====================\n"
echo -e "âœ“ All checks passed! Your code is looking great!\n"

